{

  "manifest_version": 2,
  "name": "Subtite.it",
  "version": "1.0",

  "description": "Adds subtitles editor for youtube video",
  "homepage_url": "https://github.com/vindex10/subtite.it-extension",

  "icons": {
    "48": "assets/img/icons/extension-logo-48.png",
    "96": "assets/img/icons/extension-logo-96.png"
  },

  "applications": {
    "gecko": {
      "id": "subtite@github.com"
    }
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content-scripts/settings.js",
             "content-scripts/utils.js",
             "content-scripts/storage.js",
             "content-scripts/requests.js",
             "content-scripts/youtube_ui.js",
             "content-scripts/timeline_events.js",
             "content-scripts/content.js"],
       "css": ["content-scripts/content.css"],
      "run_at": "document_start"
    }
  ],

  "background": {
      "page": "background/background.html"
  },

  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "https://subtite.it/*",
    "*://localhost/*"
  ],


  "browser_action": {
    "default_icon": "assets/img/icons/extension-logo-19.png",
    "default_title": "Subtite.it",
    "default_popup": "/popup/index.html"
  }
}
